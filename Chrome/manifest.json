{
    "name": "Wagwoord",
    "version": "0.1",
    "description": "Wagwoord credential Manager",
    "permissions": [
        "declarativeContent",
        "storage",
        "activeTab",
        "contextMenus",
        "file://*/*",
        "unlimitedStorage",
        "tabs"
    ],
    "icons": {
        "512": "assests/logo/logo-white.png"
    },
    "author": "Genti Elezaj",
    "background": {
        "page": "background/background.html",
        "persistent": false
    },
    "browser_action": {
        "default_title": "Wagwoord",
        "default_popup": "popup/popup.html"
    },
    "manifest_version": 2,
    "options_page": "option/options.html",
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*", "file:///*/*"],
        "js": [
            "content-scripts/autofill.js"
        ],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [
        "content-scripts/app/common/util.js",
        "content-scripts/app/common/util.js",
        "content-scripts/app/common/form-detectors.js",
        "content-scripts/app/passwords/auto-fill-passwords.js",
        "content-scripts/app/app.js",
        "content-scripts/css/password-list-autofill.css",
        "assests/css/app-defaults.css"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+V",
                "mac": "Command+Shift+V",
                "chromeos": "Ctrl+Shift+V",
                "linux": "Ctrl+Shift+V"
            }
        }
    }
}