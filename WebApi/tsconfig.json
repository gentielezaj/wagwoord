{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "ES2018",
        "strict": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "noImplicitAny": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "lib": [
        "ES2018"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}