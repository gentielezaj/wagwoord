<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.totp.TotpItemFragment">

    <data class=".databinding.CreditcardItemFragmentBinding">
        <import type="me.gentielezaj.wagwoord.fragments.util.PartialCommonKt" />

        <variable
            name="data"
            type="me.gentielezaj.wagwoord.models.entities.CreditCard" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayoutList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/inner_frame_layout_padding">


                <include
                    layout="@layout/partial_layout_property_view"
                    app:label="@{`Name`}"
                    app:type="@{`property`}"
                    app:value="@{data.name}" />

                <include
                    layout="@layout/partial_layout_property_view"
                    app:label="@{`Card number`}"
                    app:type="@{`password`}"
                    app:value="@{data.cardNumber}" />

                <include
                    layout="@layout/partial_layout_property_view"
                    app:label="@{`Expires in`}"
                    app:type="@{`property`}"
                    app:value="@{data.expiredMonth + `/` + data.expiredYear}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorMainLighter"
                    android:padding="@dimen/inner_frame_layout_padding" />

                <include
                    layout="@layout/partial_layout_property_password_view"
                    app:model="@{PartialCommonKt.getPasswordModel(`CVV`, data.cvv)}"/>
                <include
                    layout="@layout/partial_layout_property_password_view"
                    app:model="@{PartialCommonKt.getPasswordModel(`Pin`, data.pin)}"/>

                <include
                    layout="@layout/partial_layout_property_view"
                    app:label="@{`NFC`}"
                    app:type="@{`property`}"
                    app:value="@{data.nfc}" />

                <include
                    layout="@layout/partial_layout_core_entity_count_properties"
                    app:data="@{data}"/>

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>