<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.demo.DemoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="demo shit" />

        <Button
            android:id="@+id/demo_clear_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear storage"/>

        <Button
            android:id="@+id/demo_open_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sync all"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="15"
            android:hint="@string/server_url"
            android:text="http://10.0.2.2:4040/api"
            android:inputType="textUri"/>

    </LinearLayout>

</FrameLayout>