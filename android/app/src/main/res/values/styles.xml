<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="isLightTheme">false</item>
        <item name="android:divider">@color/colorPrimaryDark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:textColor">@color/colorAccentLighter</item>
        <item name="android:textColorPrimary">@color/colorAccentLighter</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarDividerColor">@color/colorPrimaryDark</item>
        <item name="android:backgroundSplit">@color/colorPrimaryDark</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="searchViewStyle">@style/EditText</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseAppTheme">
        <item name="android:windowLightStatusBar">false</item>
        <item name="isLightTheme">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemIconTint">@color/active_inactive_colors</item>
        <item name="itemTextColor">@color/active_transparent_colors</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorAccentLight</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="SplashTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/shape_edit_text_square</item>
        <item name="android:padding">6dp</item>
    </style>


    <!-- region dialog -->
    <style name="AppDialog">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>

        <item name="android:windowBackground">@color/colorTransparent50</item>
        <item name="android:background">@color/colorMainLight</item>


        <item name="android:windowSwipeToDismiss">true</item>
        <item name="android:windowTitleStyle">@style/AppDialogTitle</item>

    </style>

    <style name="AppDialogTitle">
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:background">@color/colorMainLight</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- endregion dialog -->
</resources>
